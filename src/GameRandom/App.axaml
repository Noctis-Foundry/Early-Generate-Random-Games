<Application xmlns="https://github.com/avaloniaui"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             x:Class="GameRandom.App"
             xmlns:local="using:GameRandom"
             RequestedThemeVariant="Default">
    <!-- "Default" ThemeVariant follows system theme variant. "Dark" or "Light" are other available options. -->

    <Application.DataTemplates>
        <local:ViewLocator />
    </Application.DataTemplates>
    
    <Application.Styles>
        <FluentTheme />
        <StyleInclude Source="Style/MainContentStyle.axaml"></StyleInclude>
        <StyleInclude Source="Style/RollContentStyle.axaml"></StyleInclude>
        <StyleInclude Source="Style/ProfileStyle.axaml"></StyleInclude>
        <StyleInclude Source="Style/MenuItemsStyle.axaml"></StyleInclude>
        <StyleInclude Source="Style/LobbyStyle.axaml"></StyleInclude>
        <StyleInclude Source="Style/TableStyle.axaml"></StyleInclude>
    </Application.Styles>
</Application>