<Window xmlns="https://github.com/avaloniaui"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:vm="using:GameRandom.ViewModels"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        mc:Ignorable="d" d:DesignWidth="963" d:DesignHeight="540"
        x:Class="GameRandom.Views.MainWindow"
        x:DataType="vm:MainWindowViewModel"
        Icon="/Assets/avalonia-logo.ico"
        Title="GameRandom"
        MaxWidth="963" 
        MaxHeight="540" >
    
    <DockPanel VerticalSpacing="5">
        <DockPanel.Background> Gray </DockPanel.Background>
        <Menu DockPanel.Dock="Top" Classes="MainWindowMenu">
            <MenuItem Classes="MainWindowMenuItem" Header="Lobby"
                      Command="{Binding OpenLobby}"></MenuItem>
            <MenuItem Classes="MainWindowMenuItem" Header="Show Error"
                      Command="{Binding ShowError}"></MenuItem>
        </Menu>
        <ContentControl x:Name="ControlMain"></ContentControl>
    </DockPanel>
</Window>