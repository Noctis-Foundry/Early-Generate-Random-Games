<UserControl xmlns="https://github.com/avaloniaui"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             mc:Ignorable="d" d:DesignWidth="800" d:DesignHeight="450"
             x:Class="GameRandom.Views.MainWindowContent">
    
    <Grid>
        <Button Classes="ButtonLeftUpGround" Grid.Column="0" Margin="0,0" Click="GoToTable"
                HorizontalAlignment="Left" VerticalAlignment="Top" Background="Transparent" BorderBrush="Transparent" BorderThickness="0">
            <Image Source="../Assets/LeftUpClick.png"  Width="360" Stretch="Uniform" > </Image>
        </Button>
        <Button Classes="ButtonLeftDownGround" Grid.Column="0" Margin="0,0" Click="GoToProfile"
                HorizontalAlignment="Left" VerticalAlignment="Bottom" Background="Transparent" BorderBrush="Transparent" BorderThickness="0">
            <Image Source="../Assets/LeftDownClick.png" Width="360" Stretch="Uniform"> </Image>
        </Button>
        <Button Classes="ButtonRightGround" Grid.Column="0" Margin="0,0" Click="GoToRollContent" 
                HorizontalAlignment="Right"  Background="Transparent" BorderBrush="Transparent" BorderThickness="0">
            <Image Source="../Assets/RightClick.png" Width="580" Stretch="UniformToFill" > </Image>
        </Button>
        <Grid >
            <Button Classes="ButtonRightGround" Grid.Column="0" Margin="-5,-5" Click="GoToRules" 
                    HorizontalAlignment="Left" VerticalAlignment="Top" Background="Transparent" BorderBrush="Transparent" BorderThickness="0">
                <Image Source="../Assets/Rules.jpg" Width="50" Height="50" Stretch="UniformToFill" > </Image>
            </Button>
        </Grid>
    </Grid>
</UserControl>
