<Window xmlns="https://github.com/avaloniaui"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        mc:Ignorable="d" d:DesignWidth="500" d:DesignHeight="250"
        x:Class="GameRandom.Views.LobbyModalWindow.LobbyWindow"
        Width="500" Height="250"
        Title="LobbyWindow">
    
        <DockPanel>
                <DockPanel.Background>
                        Gray
                </DockPanel.Background>
                
                <Grid RowDefinitions="Auto, Auto" RowSpacing="10" 
                      VerticalAlignment="Center" HorizontalAlignment="Center"
                      Margin="0,0,0,30">
                        <Label Content="Write lobby id for connect to group"
                               Classes="LobbyLabel"
                               HorizontalAlignment="Center"
                               Grid.Row="0"></Label> 
                        <Grid Grid.ColumnDefinitions="Auto, Auto"  Grid.Row="1"
                              ColumnSpacing="5">
                                <TextBox Classes="LobbyTextBox"
                                         Width="300" x:Name="IdBox"
                                         MaxLength="18"
                                         TextChanged="OnLobbyIdChanging"
                                         Text="..."></TextBox>
                                <Button Classes="CloseProfile" Grid.Column="1"
                                        Content="Connect"
                                        Click="ConnectToLobby"></Button>
                        </Grid>
                        
                </Grid>
                
        </DockPanel>
        
</Window>
