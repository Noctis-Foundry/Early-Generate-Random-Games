<Styles xmlns="https://github.com/avaloniaui"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml">
    <Design.PreviewWith>
        <Border Padding="20">
            <Button Classes="RandomButton">
                <Image Source="../Assets/10.jpg"></Image>
            </Button>
        </Border>
    </Design.PreviewWith>

    <!-- Add Styles Here -->
    <Style Selector="Button.RandomButton">
        <Setter Property="VerticalAlignment" Value="Bottom"></Setter>
        <Setter Property="BorderBrush" Value="Black"></Setter>
        <Setter Property="BorderThickness" Value="2"></Setter>
    </Style>
    
    <Style Selector="Button.RandomButton:pointerover /template/ContentPresenter">
        <Setter Property="RenderTransform">
            <ScaleTransform ScaleX="1.05" ScaleY="1.05"> </ScaleTransform>
        </Setter>
    </Style>
    
    <Style Selector="Image.RandomButton /template/ContentPresenter">
        <Setter Property="Transitions">
            <Transitions>
                <ThicknessTransition Property="Margin" Duration="0:0:0.2"> </ThicknessTransition>
                <BrushTransition Property="Background" Duration="0:0:0.2"> </BrushTransition>
            </Transitions>
        </Setter>
    </Style>
    
    <Style Selector="Image.GameImages">
        <Setter Property="Width" Value="200"></Setter>
        <Setter Property="Height" Value="250"></Setter>
    </Style>
</Styles>
